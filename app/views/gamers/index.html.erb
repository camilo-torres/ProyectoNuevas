<p id="notice"><%= notice %></p>

<h1>Gamers</h1>
<center>
<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Password</th>
      <th>Email</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |gamer| %>
      <tr>
        <td><%= gamer.nickname %></td>
        <td><%= gamer.password %></td>
        <td><%= gamer.email %></td>
        <td><%= gamer.country %></td>
        <td><%= link_to 'Show', gamer %></td>
        <td><%= link_to 'Edit', edit_gamer_path(gamer) %></td>
        <td><%= link_to 'Destroy', gamer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>

<%= link_to 'New Gamer', new_gamer_path %>
